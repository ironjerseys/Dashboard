@* Injecte le contexte Entity Framework pour accéder à la base de données *@
@inject Sandbox.Data.BlogContext Db

@{  
    // Récupère tous les articles triés par date de création décroissante
    var articles = Db.Articles
        .OrderByDescending(a => a.DateCreation)
        .ToList();
    // Définit le titre de la page pour la vue (_Layout.cshtml peut l'utiliser)
    ViewData["Title"] = "Accueil";
}

<!-- Import de la feuille de styles Bootstrap depuis un CDN -->
<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

<!-- Conteneur principal centré et avec un padding-top -->
<div class="container pt-4">
    
    <!-- Titre principal de la page avec margin-bottom -->
    <h1 class="mb-4">Derniers articles</h1>
    
    <!--
        Grille Bootstrap:
        - row-cols-1 : 1 colonne par ligne sur petits écrans
        - row-cols-md-3 : 3 colonnes par ligne à partir de l'écran médium
        - g-4 : gap (espacement) de 1.5rem entre les colonnes et lignes
    -->
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @* Boucle sur chaque article récupéré *@
        @foreach (var a in articles)
        {
            <!-- Colonne de la grille -->
            <div class="col">
                <!-- Card Bootstrap avec bordure primaire et margin-bottom -->
                <div class="card border-primary mb-3">
                    <!-- Corps de la card (padding interne) -->
                    <div class="card-body">
                        <!-- Titre de l'article -->
                        <h5 class="card-title">@a.Titre</h5>
                        <!-- Extrait du contenu limité à 120 caractères -->
                        <p class="card-text">
                            @a.Contenu.Substring(0, Math.Min(a.Contenu.Length, 120))…
                        </p>
                    </div>
                    <!-- Pied de la card aligné à droite -->
                    <div class="card-footer text-end">
                        <!-- Lien vers la page de détail de l'article -->
                        <a asp-controller="Articles" asp-action="Details" asp-route-id="@a.Id"
                           class="btn btn-sm btn-outline-primary">Lire</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>