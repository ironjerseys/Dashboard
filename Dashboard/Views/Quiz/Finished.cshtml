@model (int score, int total)

<div class="container">
    <div class="item">
        <h2>Quiz terminé !</h2>
        <p>Votre score : @Model.score / @Model.total</p>
        <form asp-action="Restart" method="post">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-info">Recommencer</button>
        </form>
    </div>
</div>
