@model Dashboard.Models.Todo
@{
    ViewData["Title"] = "Modifier la tâche";
}
<h1>Modifier la tâche</h1>
<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="mb-3">
        <label class="form-label">Description</label>
        <input name="description" class="form-control" value="@Model.Description" maxlength="500" required />
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="text-danger">@ViewData.ModelState["Description"]?.Errors.FirstOrDefault()?.ErrorMessage</div>
        }
    </div>
    <button class="btn btn-primary">Enregistrer</button>
    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
