@using Dashboard.Entities
@model QuizQuestion
@{
    ViewData["Title"] = "Nouvelle question";
}
<div class="container mt-5 article-page">
    <div class="card article-card">
        <h1>Créer une question</h1>
        @if(TempData["ok"]!=null){<div class="alert alert-success">@TempData["ok"]</div>}
        <form method="post">
            <div class="mb-3">
                <label class="form-label" asp-for="QuestionText">Question</label>
                <textarea class="form-control" asp-for="QuestionText" rows="4"></textarea>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label" asp-for="Choice0">Proposition 1</label>
                    <input class="form-control" asp-for="Choice0" />
                </div>
                <div class="col-md-6">
                    <label class="form-label" asp-for="Choice1">Proposition 2</label>
                    <input class="form-control" asp-for="Choice1" />
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label" asp-for="Choice2">Proposition 3</label>
                    <input class="form-control" asp-for="Choice2" />
                </div>
                <div class="col-md-6">
                    <label class="form-label" asp-for="Choice3">Proposition 4</label>
                    <input class="form-control" asp-for="Choice3" />
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="CorrectAnswer">Bonne réponse (index 0-3)</label>
                <input class="form-control" asp-for="CorrectAnswer" type="number" min="0" max="3" />
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Explanation">Explication</label>
                <textarea class="form-control" asp-for="Explanation" rows="3"></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label">Article lié (optionnel)</label>
                <select class="form-select" asp-for="ArticleId" asp-items="(IEnumerable<SelectListItem>)ViewBag.Articles">
                    <option value="">-- Aucun --</option>
                </select>
            </div>
            <div class="text-end">
                <button class="btn btn-primary">Créer</button>
            </div>
        </form>
    </div>
</div>
