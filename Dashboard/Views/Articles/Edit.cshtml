@model Dashboard.Models.Article
@{
    ViewData["Title"] = "Modifier un article";
}

<h1>Modifier</h1>

<form asp-action="Edit" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Titre" class="form-label"></label>
        <input asp-for="Titre" class="form-control" />
        <span asp-validation-for="Titre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Contenu" class="form-label"></label>
        <textarea asp-for="Contenu" rows="8" class="form-control"></textarea>
        <span asp-validation-for="Contenu" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enregistrer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}