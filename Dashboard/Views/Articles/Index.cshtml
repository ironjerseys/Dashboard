@using Dashboard.Entities
@using Dashboard.Models
@using System.Text.RegularExpressions

@model IEnumerable<Article>

@{
    ViewData["Title"] = "Articles";
    var labels = (IEnumerable<Label>)ViewBag.Labels ?? Enumerable.Empty<Label>();
    var selectedIds = (int[]) (ViewBag.SelectedLabelIds ?? Array.Empty<int>());
    var selectedSort = (Dashboard.Services.ArticleSort)(ViewBag.SelectedSort ?? Dashboard.Services.ArticleSort.DateNewest);
    var search = (string)(ViewBag.Search ?? string.Empty);
}

<div class="mt-5 article-page article-list">

    <!-- Titre principal de la page avec margin-bottom -->
    <h1 class="mb-3">Derniers articles</h1>

    <div class="mb-4">
        <strong>Labels:</strong>
        <form id="labels-form" method="get" class="d-flex flex-wrap align-items-center gap-2 ms-0">
            <div class="d-flex flex-wrap align-items-center gap-2">
            @foreach (var l in labels)
            {
                var checkedAttr = selectedIds.Contains(l.Id) ? "checked" : null;
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="labels" value="@l.Id" @(checkedAttr) id="lbl_@l.Id" />
                    <label class="form-check-label" for="lbl_@l.Id">@l.Name</label>
                </div>
            }
            </div>
            <div class="ms-auto d-flex align-items-center gap-2">
                <input type="text" name="search" value="@search" class="form-control form-control-sm" placeholder="Rechercher..." style="max-width:220px" />
                <select name="sort" class="form-select form-select-sm" style="width:auto">
                    <option value="DateNewest" selected="@(selectedSort == Dashboard.Services.ArticleSort.DateNewest ? "selected" : null)">Plus récent → plus ancien</option>
                    <option value="DateOldest" selected="@(selectedSort == Dashboard.Services.ArticleSort.DateOldest ? "selected" : null)">Plus ancien → plus récent</option>
                    <option value="TitleAsc" selected="@(selectedSort == Dashboard.Services.ArticleSort.TitleAsc ? "selected" : null)">Titre A → Z</option>
                    <option value="TitleDesc" selected="@(selectedSort == Dashboard.Services.ArticleSort.TitleDesc ? "selected" : null)">Titre Z → A</option>
                </select>
                <button class="btn btn-sm">Filtrer</button>
                <a class="btn btn-sm" href="@Url.Action("Index")">Réinitialiser</a>
            </div>
        </form>
    </div>

    @if (!(Model?.Any() ?? false))
    {
        <p>Aucun article pour le moment.</p>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var article in Model)
            {
                <!-- Colonne de la grille -->
                <div class="col">
                    <!-- Card Bootstrap avec bordure primaire et margin-bottom -->
                    <div class="card border-primary mb-3 h-100 d-flex flex-column article-card">
                        <!-- Corps de la card (padding interne) -->
                        <div class="card-body">
                            <!-- Titre de l'article -->
                            <h5 class="card-title">@article.Titre</h5>
                            <!-- Extrait du contenu -->
                            <div class="card-text small excerpt">
                                @PlainExcerpt(article.Contenu, 160)
                            </div>
                        </div>
                        <!-- Ligne labels séparée avec troncature -->
                        <div class="py-2">
                            <div class="labels-line text-truncate" title="@string.Join(", ", (article.Labels?.Select(l => l.Name) ?? Enumerable.Empty<string>()))">
                                @if (article.Labels?.Any() ?? false)
                                {
                                    <!-- Afficher labels séparés par virgule pour rester sur une ligne -->
                                    @string.Join(", ", article.Labels.Select(l => l.Name))
                                }
                            </div>
                        </div>
                        <!-- Pied de la card: date + bouton Lire -->
                        <div class="d-flex justify-content-between align-items-center mt-auto">
                            <div class="small text-muted">
                                @article.DateCreation.ToLocalTime().ToString("dd/MM/yyyy")
                            </div>
                            <div class="ms-2">
                                <a asp-controller="Articles" asp-action="Details" asp-route-id="@article.Id"
                                   class="btn btn-sm">Lire</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    <a class="btn btn-primary mt-5" asp-action="Create">Nouvel article</a>

</div>

@functions {
    private static string PlainExcerpt(string html, int maxChars)
    {
        if (string.IsNullOrEmpty(html)) return string.Empty;
        var text = Regex.Replace(html, "<.*?>", " ");
        text = Regex.Replace(text, @"\s+", " ").Trim();
        return text.Length <= maxChars ? text : text.Substring(0, maxChars).Trim() + "…";
    }
}

