@model Article
@{
    ViewData["Title"] = "Nouvel article";
}

<div class="container mt-5 article-page">
<h1>Nouvel article</h1>

<form asp-action="Create" class="mt-3">
    @using System.Security.Claims
@using Dashboard.Entities
    <div class="mb-3">
        <label asp-for="Titre" class="form-label"></label>
        <input asp-for="Titre" class="form-control"/>
        <span asp-validation-for="Titre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Contenu" class="form-label"></label>
        <textarea asp-for="Contenu" rows="8" class="form-control" id="Contenu"></textarea>
        <span asp-validation-for="Contenu" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Publier</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/summernote@0.8.20/dist/summernote-bs5.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.20/dist/summernote-bs5.min.js"></script>
    <script>
        $(function () {
            const $ed = $('#Contenu');
            $ed.summernote({
                placeholder: 'Écrivez votre article...',
                height: 300,
                dialogsInBody: true,
                styleTags: ['p', 'h2', 'h3', 'blockquote', 'pre'],
                toolbar: [
                    ['style', ['style']],
                    ['font', ['bold', 'italic', 'underline', 'clear']],
                    ['fontname', ['fontname']],
                    ['fontsize', ['fontsize']],
                    ['color', ['color']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['insert', ['link']],
                    ['view', ['codeview']]
                ],
                fontNames: ['Arial', 'Arial Black', 'Courier New', 'Roboto', 'Times New Roman'],
                fontSizes: ['8', '10', '12', '14', '16', '18', '20', '24', '28', '32', '36']
            });

            // Empêcher l’insertion du contenu par défaut si image présente afin d’éviter le double
            $ed.on('summernote.paste', function (e, clipboard) {
                const data = (clipboard.originalEvent.clipboardData || clipboard.clipboardData);
                if (!data || !data.items) return;
                let handled = false;
                for (const item of data.items) {
                    if (item.type && item.type.indexOf('image') === 0) {
                        handled = true;
                        const file = item.getAsFile();
                        const reader = new FileReader();
                        reader.onload = function(evt) {
                            $ed.summernote('insertImage', evt.target.result);
                        };
                        reader.readAsDataURL(file);
                    }
                }
                if (handled) {
                    e.preventDefault();
                }
            });

            $ed.on('summernote.drop', function (e) {
                e.preventDefault();
                const dt = e.originalEvent.dataTransfer;
                if (!dt || !dt.files) return;
                [...dt.files].forEach(f => {
                    if (f.type && f.type.startsWith('image/')) {
                        const r = new FileReader();
                        r.onload = ev => $ed.summernote('insertImage', ev.target.result);
                        r.readAsDataURL(f);
                    }
                });
            });
        });
    </script>
}