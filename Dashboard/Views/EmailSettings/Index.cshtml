@using Dashboard.Entities
@model EmailSettings
@{
    ViewData["Title"] = "Paramètres email";
}
<div class="container mt-5 article-page">
    <div class="card article-card">
        <h1 class="mb-3">Paramètres d'envoi d'emails</h1>
        @if(TempData["ok"]!=null){<div class="alert alert-success">@TempData["ok"]</div>}
        <form method="post">
            <input type="hidden" asp-for="UserId" />
            <div class="form-check form-switch mb-3">
                <input class="form-check-input" asp-for="Enabled" />
                <label class="form-check-label" asp-for="Enabled">Activer l'envoi</label>
            </div>
            <div class="row mb-3">
                <div class="col-md-4">
                    <label class="form-label" asp-for="RecipientEmail">Adresse de réception</label>
                    <input class="form-control" asp-for="RecipientEmail" />
                </div>
                <div class="col-md-4">
                    <label class="form-label" asp-for="Frequency">Périodicité</label>
                    <select class="form-select" asp-for="Frequency" asp-items="Html.GetEnumSelectList<EmailFrequency>()"></select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Heure</label>
                    <div class="d-flex gap-2">
                        <input class="form-control" asp-for="Hour" type="number" min="0" max="23" />
                        <input class="form-control" asp-for="Minute" type="number" min="0" max="59" />
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label" asp-for="DayOfWeek">Jour de la semaine</label>
                    <select class="form-select" asp-for="DayOfWeek" asp-items="Html.GetEnumSelectList<DayOfWeek>()">
                        <option value="">-- N/A --</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label class="form-label" asp-for="DayOfMonth">Jour du mois</label>
                    <input class="form-control" asp-for="DayOfMonth" type="number" min="1" max="31" />
                </div>
            </div>
            <div class="text-end">
                <button class="btn btn-primary">Enregistrer</button>
            </div>
        </form>
        <hr />
        <p class="text-muted">Les emails contiendront les objectifs en cours (si présents) et les titres des articles créés pendant la période.</p>
    </div>
</div>
