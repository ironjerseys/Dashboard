@page "/review"

@using System.Net
@using System.Security.Claims
@using System.Text.RegularExpressions
@using Dashboard.Persistance.Entities
@using Dashboard.Persistance.Entities
@using Dashboard.Services
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Web

@rendermode RenderMode.InteractiveServer

@inject ILeitnerService LeitnerService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager

<div class="container mt-4">
    <div class="card p-3">
        <div class="d-flex justify-content-between align-items-center">
            <h2 class="mb-0">Révisions du jour</h2>
            <span class="text-muted small">@_status</span>
        </div>
    </div>

    @if (!string.IsNullOrWhiteSpace(_error))
    {
        <div class="alert alert-danger mt-3">@_error</div>
    }

    @if (_loading)
    {
        <div class="mt-3 text-muted">Chargement…</div>
    }
    else if (_dueItems.Count == 0)
    {
        <div class="card p-4 mt-3">
            <h4 class="mb-1">Rien à réviser</h4>
            <div class="text-muted">Aucune question n’est due aujourd’hui.</div>
        </div>
    }
    else
    {
        var current = _dueItems[_currentIndex];
        var question = current.Question;

        <div class="card p-4 mt-3">
            <div class="d-flex justify-content-between align-items-center">
                <div class="text-muted small">
                    Question @(_currentIndex + 1) / @_dueItems.Count — Boîte @current.Box
                </div>
                <div class="text-muted small">
                    Due: @current.NextDueDate.ToString("yyyy-MM-dd")
                </div>
            </div>

            <hr />

            @RenderQuestionText(question.QuestionText)

            <InputRadioGroup TValue="int?" @bind-Value="_selectedChoice" Name="choice">
                @for (var choiceIndex = 0; choiceIndex < 4; choiceIndex++)
                {
                    var choiceText = GetChoiceText(question, choiceIndex);

                    <div class="form-check mb-2">
                        <InputRadio TValue="int?"
                                    class="form-check-input"
                                    Value="@choiceIndex"
                                    disabled="@(_busy || _showResult)" />
                        <label class="form-check-label">@choiceText</label>
                    </div>
                }
            </InputRadioGroup>

            @if (_showResult)
            {
                <div class="mt-3">
                    @if (_isCorrect)
                    {
                        <div class="alert alert-success mb-2">Bonne réponse.</div>
                    }
                    else
                    {
                        <div class="alert alert-danger mb-2">
                            Mauvaise réponse. La bonne réponse était :
                            <b>@GetChoiceText(question, question.CorrectAnswer)</b>
                        </div>
                    }

                    @if (!string.IsNullOrWhiteSpace(question.Explanation))
                    {
                        <div class="card p-3">
                            <div class="fw-bold mb-1">Explication</div>

                            @* Explication : HTML Summernote -> rendu, sinon texte *@
                            @if (LooksLikeHtml(question.Explanation))
                            {
                                <div class="quiz-html">
                                    @((MarkupString)(question.Explanation ?? string.Empty))
                                </div>
                            }
                            else
                            {
                                <div>@question.Explanation</div>
                            }
                        </div>
                    }
                </div>
            }

            <div class="d-flex gap-2 mt-4">
                @if (!_showResult)
                {
                    <button class="btn btn-primary"
                            disabled="@_busy"
                            @onclick="SubmitAnswerAsync">
                        Valider
                    </button>
                }
                else
                {
                    <button class="btn btn-primary"
                            disabled="@_busy"
                            @onclick="NextAsync">
                        Suivant
                    </button>
                }

                @* <button class="btn btn-secondary"
                          disabled="@_busy"
                          @onclick="ReloadAsync">
                    Recharger
                </button> *@
            </div>
        </div>
    }
</div>

<style>
    .quiz-html p { margin-bottom: .5rem; }

    .quiz-html pre {
        background: rgba(0,0,0,.06);
        border: 1px solid rgba(0,0,0,.10);
        border-radius: 12px;
        padding: 12px;
        overflow: auto;
    }
</style>

@code
{
    private string _ownerId = string.Empty;

    private bool _loading = true;
    private bool _busy = false;

    private string _status = string.Empty;
    private string? _error;

    private List<LeitnerDueItem> _dueItems = new();
    private int _currentIndex = 0;

    private int? _selectedChoice;
    private bool _showResult = false;
    private bool _isCorrect = false;

    protected override async Task OnInitializedAsync()
    {
        await EnsureAuthenticatedAsync();
        await ReloadAsync();
    }

    private async Task EnsureAuthenticatedAsync()
    {
        AuthenticationState authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        ClaimsPrincipal user = authState.User;

        if (!(user.Identity?.IsAuthenticated ?? false))
        {
            string returnUrl = Uri.EscapeDataString("/review");
            NavigationManager.NavigateTo($"/account/login?returnUrl={returnUrl}", forceLoad: true);
            return;
        }

        _ownerId = user.FindFirstValue(ClaimTypes.NameIdentifier) ?? string.Empty;
    }

    private async Task ReloadAsync()
    {
        try
        {
            _error = null;
            _loading = true;

            DateOnly todayUtc = DateOnly.FromDateTime(DateTime.UtcNow);

            await LeitnerService.SyncMissingCardsAsync(_ownerId);
            IReadOnlyList<LeitnerDueItem> due = await LeitnerService.GetDueAsync(_ownerId, todayUtc, take: 50);

            _dueItems = due.ToList();
            _currentIndex = 0;

            _selectedChoice = null;
            _showResult = false;
            _isCorrect = false;

            _status = $"{_dueItems.Count} question(s) due";
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task SubmitAnswerAsync()
    {
        if (_selectedChoice is null)
        {
            _error = "Sélectionne une réponse.";
            return;
        }

        try
        {
            _error = null;
            _busy = true;

            LeitnerDueItem current = _dueItems[_currentIndex];
            QuestionTechnique question = current.Question;

            _isCorrect = (_selectedChoice.Value == question.CorrectAnswer);
            _showResult = true;

            DateOnly todayUtc = DateOnly.FromDateTime(DateTime.UtcNow);

            await LeitnerService.RecordReviewAsync(
                ownerId: _ownerId,
                cardId: current.CardId,
                isCorrect: _isCorrect,
                todayUtc: todayUtc);
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _busy = false;
        }
    }

    private async Task NextAsync()
    {
        _dueItems.RemoveAt(_currentIndex);

        _selectedChoice = null;
        _showResult = false;
        _isCorrect = false;

        if (_dueItems.Count == 0)
        {
            await ReloadAsync();
            return;
        }

        if (_currentIndex >= _dueItems.Count)
        {
            _currentIndex = 0;
        }

        _status = $"{_dueItems.Count} question(s) due";
    }

    private static string GetChoiceText(QuestionTechnique question, int choiceIndex)
    {
        return choiceIndex switch
        {
            0 => question.Choice0,
            1 => question.Choice1,
            2 => question.Choice2,
            3 => question.Choice3,
            _ => string.Empty
        };
    }

    private static bool LooksLikeHtml(string? s)
    {
        if (string.IsNullOrWhiteSpace(s)) return false;

        return s.Contains("<p", StringComparison.OrdinalIgnoreCase)
            || s.Contains("<br", StringComparison.OrdinalIgnoreCase)
            || s.Contains("<div", StringComparison.OrdinalIgnoreCase)
            || s.Contains("<span", StringComparison.OrdinalIgnoreCase)
            || s.Contains("<pre", StringComparison.OrdinalIgnoreCase)
            || s.Contains("<code", StringComparison.OrdinalIgnoreCase)
            || s.Contains("<img", StringComparison.OrdinalIgnoreCase);
    }

    private static string ToPlainText(string? html)
    {
        if (string.IsNullOrWhiteSpace(html)) return string.Empty;

        var s = html
            .Replace("<br>", "\n", StringComparison.OrdinalIgnoreCase)
            .Replace("<br/>", "\n", StringComparison.OrdinalIgnoreCase)
            .Replace("<br />", "\n", StringComparison.OrdinalIgnoreCase)
            .Replace("</p>", "\n", StringComparison.OrdinalIgnoreCase);

        s = Regex.Replace(s, "<.*?>", string.Empty);
        return WebUtility.HtmlDecode(s);
    }

    private static bool HasCodeFence(string? text)
        => !string.IsNullOrEmpty(text) && text.Contains("```", StringComparison.Ordinal);

    private static string ExtractCode(string? text)
    {
        text ??= string.Empty;

        int start = text.IndexOf("```", StringComparison.Ordinal);
        int end = text.LastIndexOf("```", StringComparison.Ordinal);

        if (start >= 0 && end > start)
            return text.Substring(start + 3, end - start - 3).Trim();

        return text.Trim();
    }

    private RenderFragment RenderQuestionText(string? text) => builder =>
    {
        string html = text ?? string.Empty;
        string plain = ToPlainText(html);

        // Code fence => rendu <pre><code> (sur le texte "plain", pas sur le HTML)
        if (HasCodeFence(plain))
        {
            builder.OpenElement(0, "pre");
            builder.AddAttribute(1, "class", "mb-3 p-3");
            builder.AddAttribute(2, "style",
                "background: rgba(0,0,0,.06); border: 1px solid rgba(0,0,0,.10); border-radius: 12px; overflow:auto;");
            builder.OpenElement(3, "code");
            builder.AddContent(4, ExtractCode(plain));
            builder.CloseElement(); // code
            builder.CloseElement(); // pre
            return;
        }

        // HTML Summernote => MarkupString
        if (LooksLikeHtml(html))
        {
            builder.OpenElement(10, "div");
            builder.AddAttribute(11, "class", "mb-3 quiz-html");
            builder.AddMarkupContent(12, html);
            builder.CloseElement();
            return;
        }

        // Texte simple
        builder.OpenElement(20, "p");
        builder.AddAttribute(21, "class", "mb-3");
        builder.AddContent(22, html);
        builder.CloseElement();
    };
}
