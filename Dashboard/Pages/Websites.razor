@page "/websites"

@using Microsoft.JSInterop
@using Microsoft.AspNetCore.Components.Web
@using global::Dashboard.Models

@rendermode RenderMode.InteractiveServer

@inject IJSRuntime JS


<div class="container">
    @foreach (var website in WebsitesList)
    {
        var isRemoved = string.IsNullOrWhiteSpace(website.Url);

        <div class="exp-item p-4 afficher @(isRemoved ? "removed" : "")">

            <header class="d-flex flex-column flex-md-row justify-content-between gap-2 mt-5 mb-5">
                <div>
                    <h2 class="exp-title mb-1">@website.Name</h2>

                    <div class="exp-meta">
                        @if (!isRemoved)
                        {
                            <span class="exp-company">Disponible sur : </span>
                            <a class="site-link" href="@website.Url" target="_blank" rel="noopener noreferrer">
                                @website.Platform
                            </a>
                        }
                        else
                        {
                            <span class="exp-company">Intégré à ChessMultitool</span>
                        }
                    </div>
                </div>
            </header>


            <img src="@($"/images/{website.Image}")" alt="@website.Name" class="site-image" />
            <div class="mt-5 mb-5">@((MarkupString)website.DescriptionHtml)</div>
        </div>
    }
</div>

