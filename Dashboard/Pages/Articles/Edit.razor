@page "/articles-v2/{Id:int}/edit"

@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Admin")]

@using System.ComponentModel.DataAnnotations
@using Dashboard.Entities
@using Dashboard.Services
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.JSInterop
@using Microsoft.AspNetCore.Components.Web

@inject IArticleService ArticleService
@inject NavigationManager Navigation
@inject IJSRuntime JavaScript

@rendermode RenderMode.InteractiveServer

<h1 class="mt-4">Modifier un article</h1>

@if (_isLoading)
{
    <p>Chargement…</p>
}
else if (!string.IsNullOrWhiteSpace(_loadError))
{
    <div class="alert alert-danger">@_loadError</div>
}
else if (_editModel is null)
{
    <div class="alert alert-warning">Article introuvable.</div>
}
else
{
    <div class="container mt-4 article-page">
        <div class="card article-card">

            <EditForm EditContext="_editContext" OnValidSubmit="SaveAsync">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="mb-3">
                    <label class="form-label">Titre</label>
                    <InputText class="form-control" @bind-Value="_editModel.Titre" />
                    <ValidationMessage For="() => _editModel.Titre" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Contenu</label>

                    @* Option simple : textarea *@
                    @* <InputTextArea class="form-control" rows="10" @bind-Value="_editModel.Contenu" /> *@

                    @* Option Summernote : on laisse un textarea et on synchronise via JS interop *@
                    <textarea class="form-control" rows="10" @ref="_contentTextArea"></textarea>

                    <ValidationMessage For="() => _editModel.Contenu" />
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Labels existants</label>

                        <div class="border rounded p-2" style="max-height: 220px; overflow:auto;">
                            @if (_allLabels.Count == 0)
                            {
                                <div class="text-muted">Aucun label.</div>
                            }
                            else
                            {
                                @foreach (var label in _allLabels)
                                {
                                    var checkboxId = $"lbl_{label.Id}";
                                    <div class="form-check">
                                        <input class="form-check-input"
                                               type="checkbox"
                                               id="@checkboxId"
                                               checked="@_editModel.SelectedLabelIds.Contains(label.Id)"
                                               @onchange="(e) => OnLabelChanged(label.Id, e)" />
                                        <label class="form-check-label" for="@checkboxId">@label.Name</label>
                                    </div>
                                }
                            }
                        </div>

                        <div class="form-text">Coche les labels à associer à l’article.</div>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Nouveaux labels (séparés par des virgules)</label>
                        <InputText class="form-control" @bind-Value="_editModel.NewLabelsCsv" placeholder="ex: C#, OOP" />
                    </div>
                </div>

                <div class="form-check form-switch mb-3">
                    <InputCheckbox class="form-check-input" @bind-Value="_editModel.IsPublic" />
                    <label class="form-check-label">Article public</label>
                </div>

                @if (!string.IsNullOrWhiteSpace(_saveError))
                {
                    <div class="alert alert-danger">@_saveError</div>
                }

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary" disabled="@_isBusy">Enregistrer</button>
                    <button type="button" class="btn btn-secondary" @onclick="Cancel" disabled="@_isBusy">Annuler</button>
                </div>
            </EditForm>

        </div>
    </div>
}

@code {
    [Parameter] public int Id { get; set; }

    private bool _isLoading = true;
    private bool _isBusy;
    private string? _loadError;
    private string? _saveError;

    private ArticleEditModel? _editModel;
    private EditContext _editContext = default!;

    private readonly List<Label> _allLabels = new();

    private ElementReference _contentTextArea;
    private bool _shouldInitEditor;

    protected override async Task OnParametersSetAsync()
    {
        _isLoading = true;
        _loadError = null;
        _saveError = null;

        try
        {
            // IMPORTANT : adapte le nom si ton service n’a pas exactement cette méthode.
            // Objectif: récupérer l’article + ses labels.
            var article = await ArticleService.GetArticleAsync(Id);
            if (article is null)
            {
                _editModel = null;
                return;
            }

            var labels = await ArticleService.GetLabelsAsync();
            _allLabels.Clear();
            _allLabels.AddRange(labels);

            _editModel = new ArticleEditModel
            {
                Id = article.Id,
                Titre = article.Titre ?? string.Empty,
                Contenu = article.Contenu ?? string.Empty,
                IsPublic = article.IsPublic,
                NewLabelsCsv = string.Empty,
                SelectedLabelIds = new HashSet<int>(article.Labels?.Select(l => l.Id) ?? Enumerable.Empty<int>())
            };

            _editContext = new EditContext(_editModel);

            // On initialise (ou met à jour) Summernote après le rendu
            _shouldInitEditor = true;
        }
        catch (Exception exception)
        {
            _loadError = exception.Message;
        }
        finally
        {
            _isLoading = false;
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (_editModel is null) return;

        if (_shouldInitEditor)
        {
            _shouldInitEditor = false;

            // Si Summernote n’est pas chargé, la fonction JS mettra juste la valeur dans le textarea.
            await JavaScript.InvokeVoidAsync("articleEditor.init", _contentTextArea, _editModel.Contenu);
        }
    }

    private void OnLabelChanged(int labelId, ChangeEventArgs changeEventArgs)
    {
        if (_editModel is null) return;

        var isChecked = changeEventArgs.Value is bool b && b;
        if (isChecked)
        {
            _editModel.SelectedLabelIds.Add(labelId);
        }
        else
        {
            _editModel.SelectedLabelIds.Remove(labelId);
        }
    }

    private async Task SaveAsync()
    {
        if (_editModel is null) return;

        _isBusy = true;
        _saveError = null;

        try
        {
            // Récupère le HTML depuis Summernote (ou le textarea si Summernote absent)
            _editModel.Contenu = await JavaScript.InvokeAsync<string>("articleEditor.getHtml", _contentTextArea);

            // Revalide après sync (sinon Contenu peut rester vide côté model)
            if (!_editContext.Validate())
            {
                return;
            }

            string[]? newLabels = ParseNewLabels(_editModel.NewLabelsCsv);
            int[] selectedLabelIds = _editModel.SelectedLabelIds.ToArray();

            var updatedArticle = new Article
            {
                Id = _editModel.Id,
                Titre = _editModel.Titre,
                Contenu = _editModel.Contenu,
                IsPublic = _editModel.IsPublic
            };

            await ArticleService.UpdateArticleAsync(updatedArticle, newLabels, selectedLabelIds);

            Navigation.NavigateTo("/articles-v2");
        }
        catch (Exception exception)
        {
            _saveError = exception.Message;
        }
        finally
        {
            _isBusy = false;
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/articles-v2");
    }

    private static string[]? ParseNewLabels(string? csv)
    {
        if (string.IsNullOrWhiteSpace(csv)) return null;

        var items = csv.Split(',', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries);
        return items.Length == 0 ? null : items;
    }

    private sealed class ArticleEditModel
    {
        public int Id { get; set; }

        [Required(ErrorMessage = "Le titre est requis.")]
        public string Titre { get; set; } = string.Empty;

        [Required(ErrorMessage = "Le contenu est requis.")]
        public string Contenu { get; set; } = string.Empty;

        public bool IsPublic { get; set; }

        public string NewLabelsCsv { get; set; } = string.Empty;

        public HashSet<int> SelectedLabelIds { get; set; } = new();
    }
}
