@page "/articles/edit/{Id:int}"

@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Admin")]

@using System.ComponentModel.DataAnnotations
@using Dashboard.Persistance.Entities
@using Dashboard.Services
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.JSInterop

@inject IArticleService ArticleService
@inject IMediaLibraryService MediaLibrary
@inject NavigationManager Navigation
@inject IJSRuntime JavaScript

@rendermode RenderMode.InteractiveServer

<h1 class="mt-4">Modifier un article</h1>

@if (_isLoading)
{
    <p>Chargement…</p>
}
else if (!string.IsNullOrWhiteSpace(_loadError))
{
    <div class="alert alert-danger">@_loadError</div>
}
else if (_editModel is null)
{
    <div class="alert alert-warning">Article introuvable.</div>
}
else
{
    <div class="container mt-4 article-page">
        <div class="card article-card">

            <EditForm EditContext="_editContext" OnSubmit="HandleSubmit">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="mb-3">
                    <label class="form-label">Titre</label>
                    <InputText class="form-control" @bind-Value="_editModel.Titre" />
                    <ValidationMessage For="() => _editModel.Titre" />
                </div>

                @* ---------------- IMAGE DE COUVERTURE ---------------- *@
                <div class="mb-3">
                    <label class="form-label">Image de couverture</label>

                    @if (_editModel.CoverMediaId is Guid coverId)
                    {
                        <div class="mb-2">
                            <img src="@($"/media/{coverId}")"
                                 alt="Couverture"
                                 class="img-fluid rounded"
                                 style="max-height:180px; width:100%; object-fit:cover;" />
                        </div>

                        <div class="small text-muted mb-2">
                            Id : @coverId
                        </div>
                    }
                    else
                    {
                        <div class="text-muted small mb-2">Aucune image sélectionnée.</div>
                    }

                    <div class="d-flex gap-2 flex-wrap">
                        <button type="button"
                                class="btn btn-outline-secondary btn-sm"
                                @onclick="OpenUploadModal"
                                disabled="@_isBusy">
                            Uploader…
                        </button>

                        <button type="button"
                                class="btn btn-outline-secondary btn-sm"
                                @onclick="OpenCoverLibraryModalAsync"
                                disabled="@_isBusy">
                            Choisir dans la bibliothèque…
                        </button>

                        <button type="button"
                                class="btn btn-outline-danger btn-sm"
                                @onclick="ClearCover"
                                disabled="@(_isBusy || _editModel.CoverMediaId is null)">
                            Retirer
                        </button>
                    </div>

                    <div class="form-text">
                        La couverture sert pour la liste des articles (carte / aperçu). Elle est indépendante des images insérées dans le contenu.
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Contenu</label>

                    <div class="d-flex gap-2 mb-2">
                        <button type="button" class="btn btn-outline-secondary btn-sm"
                                @onclick="OpenUploadModal" disabled="@_isBusy">
                            Uploader une image
                        </button>

                        <button type="button" class="btn btn-outline-secondary btn-sm"
                                @onclick="OpenInsertLibraryModalAsync" disabled="@_isBusy">
                            Insérer une image
                        </button>
                    </div>

                    <textarea class="form-control" rows="10" @ref="_contentTextArea"></textarea>
                    <ValidationMessage For="() => _editModel.Contenu" />
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Labels existants</label>

                        <div class="border rounded p-2" style="max-height: 220px; overflow:auto;">
                            @if (_allLabels.Count == 0)
                            {
                                <div class="text-muted">Aucun label.</div>
                            }
                            else
                            {
                                @foreach (var label in _allLabels)
                                {
                                    var checkboxId = $"lbl_{label.Id}";
                                    <div class="form-check">
                                        <input class="form-check-input"
                                               type="checkbox"
                                               id="@checkboxId"
                                               checked="@_editModel.SelectedLabelIds.Contains(label.Id)"
                                               @onchange="(e) => OnLabelChanged(label.Id, e)" />
                                        <label class="form-check-label" for="@checkboxId">@label.Name</label>
                                    </div>
                                }
                            }
                        </div>

                        <div class="form-text">Coche les labels à associer à l’article.</div>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Nouveaux labels (séparés par des virgules)</label>
                        <InputText class="form-control" @bind-Value="_editModel.NewLabelsCsv" placeholder="ex: C#, OOP" />
                    </div>
                </div>

                <div class="form-check form-switch mb-3">
                    <InputCheckbox class="form-check-input" @bind-Value="_editModel.IsPublic" />
                    <label class="form-check-label">Article public</label>
                </div>

                @if (!string.IsNullOrWhiteSpace(_saveError))
                {
                    <div class="alert alert-danger">@_saveError</div>
                }

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary" disabled="@_isBusy">Enregistrer</button>
                    <button type="button" class="btn btn-secondary" @onclick="Cancel" disabled="@_isBusy">Annuler</button>
                </div>
            </EditForm>

        </div>
    </div>
}

@* ---------------- MODALE UPLOAD ---------------- *@
@if (_uploadOpen)
{
    <div class="modal fade show d-block" tabindex="-1" style="background: rgba(0,0,0,.35);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Uploader une image</h5>
                    <button type="button" class="btn-close" @onclick="CloseUploadModal"></button>
                </div>

                <div class="modal-body">
                    <InputFile OnChange="OnUploadAsync" accept="image/*" />

                    @if (!string.IsNullOrWhiteSpace(_uploadError))
                    {
                        <div class="alert alert-danger mt-3 mb-0">@_uploadError</div>
                    }
                    else if (!string.IsNullOrWhiteSpace(_uploadSuccess))
                    {
                        <div class="alert alert-success mt-3 mb-0">@_uploadSuccess</div>

                        <div class="d-flex gap-2 mt-3 flex-wrap">
                            <button type="button" class="btn btn-outline-secondary btn-sm"
                                    @onclick="OpenInsertLibraryModalAsync" disabled="@_isBusy">
                                Ouvrir la bibliothèque (insérer)
                            </button>

                            <button type="button" class="btn btn-outline-secondary btn-sm"
                                    @onclick="OpenCoverLibraryModalAsync" disabled="@_isBusy">
                                Ouvrir la bibliothèque (couverture)
                            </button>
                        </div>
                    }

                    <div class="form-text mt-2">Taille max : 2 Mo.</div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseUploadModal">Fermer</button>
                </div>
            </div>
        </div>
    </div>
}

@* ---------------- MODALE LIBRAIRIE (INSERER OU COUVERTURE) ---------------- *@
@if (_libraryOpen)
{
    <div class="modal fade show d-block" tabindex="-1" style="background: rgba(0,0,0,.35);">
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        @(_libraryPurpose == LibraryPurpose.InsertIntoContent ? "Insérer une image" : "Choisir une image de couverture")
                    </h5>
                    <button type="button" class="btn-close" @onclick="CloseLibraryModal"></button>
                </div>

                <div class="modal-body">
                    @if (_libraryLoading)
                    {
                        <div class="text-muted">Chargement…</div>
                    }
                    else if (!string.IsNullOrWhiteSpace(_libraryError))
                    {
                        <div class="alert alert-danger">@_libraryError</div>
                    }
                    else if (_media.Count == 0)
                    {
                        <div class="text-muted">Aucune image.</div>
                    }
                    else
                    {
                        <div class="row row-cols-2 row-cols-md-3 g-3">
                            @foreach (var m in _media)
                            {
                                <div class="col">
                                    <div class="border rounded p-2 h-100 d-flex flex-column gap-2">
                                        <img src="@m.Url"
                                             alt="@m.FileName"
                                             style="width:100%;height:140px;object-fit:cover;border-radius:.5rem;" />

                                        <div class="small text-truncate" title="@m.FileName">@m.FileName</div>

                                        @if (_libraryPurpose == LibraryPurpose.InsertIntoContent)
                                        {
                                            <button type="button" class="btn btn-primary btn-sm"
                                                    @onclick="() => InsertAsync(m.Url)">
                                                Insérer
                                            </button>
                                        }
                                        else
                                        {
                                            <button type="button" class="btn btn-primary btn-sm"
                                                    @onclick="() => SelectCover(m.Id)">
                                                Choisir
                                            </button>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseLibraryModal">Fermer</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public int Id { get; set; }

    private bool _isLoading = true;
    private bool _isBusy;
    private string? _loadError;
    private string? _saveError;

    private ArticleEditModel? _editModel;
    private EditContext _editContext = default!;

    private readonly List<Label> _allLabels = new();

    private ElementReference _contentTextArea;
    private bool _shouldInitEditor;

    // --- Modales images ---
    private bool _uploadOpen;
    private bool _libraryOpen;

    private string? _uploadError;
    private string? _uploadSuccess;

    private bool _libraryLoading;
    private string? _libraryError;
    private List<MediaItem> _media = new();

    private LibraryPurpose _libraryPurpose = LibraryPurpose.InsertIntoContent;

    private enum LibraryPurpose
    {
        InsertIntoContent = 0,
        SelectCover = 1
    }

    protected override async Task OnParametersSetAsync()
    {
        _isLoading = true;
        _loadError = null;
        _saveError = null;

        try
        {
            var article = await ArticleService.GetArticleByIdAsync(Id);
            if (article is null)
            {
                _editModel = null;
                return;
            }

            var labels = await ArticleService.GetLabelsAsync();
            _allLabels.Clear();
            _allLabels.AddRange(labels);

            _editModel = new ArticleEditModel
            {
                Id = article.Id,
                Titre = article.Titre ?? string.Empty,
                Contenu = article.Contenu ?? string.Empty,
                IsPublic = article.IsPublic,
                CoverMediaId = article.CoverMediaId,
                NewLabelsCsv = string.Empty,
                SelectedLabelIds = new HashSet<int>(article.Labels?.Select(l => l.Id) ?? Enumerable.Empty<int>())
            };

            _editContext = new EditContext(_editModel);

            // Initialise (ou met à jour) Summernote après le rendu
            _shouldInitEditor = true;
        }
        catch (Exception exception)
        {
            _loadError = exception.Message;
        }
        finally
        {
            _isLoading = false;
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (_editModel is null) return;

        if (_shouldInitEditor)
        {
            _shouldInitEditor = false;
            await JavaScript.InvokeVoidAsync("articleEditor.init", _contentTextArea, _editModel.Contenu);
        }
    }

    private void OpenUploadModal()
    {
        _uploadError = null;
        _uploadSuccess = null;
        _uploadOpen = true;
    }

    private void CloseUploadModal() => _uploadOpen = false;

    private async Task OpenInsertLibraryModalAsync()
    {
        _libraryPurpose = LibraryPurpose.InsertIntoContent;
        _libraryOpen = true;
        await LoadLibraryAsync();
    }

    private async Task OpenCoverLibraryModalAsync()
    {
        _libraryPurpose = LibraryPurpose.SelectCover;
        _libraryOpen = true;
        await LoadLibraryAsync();
    }

    private void CloseLibraryModal() => _libraryOpen = false;

    private void SelectCover(Guid id)
    {
        if (_editModel is null) return;
        _editModel.CoverMediaId = id;
        _libraryOpen = false;
    }

    private void ClearCover()
    {
        if (_editModel is null) return;
        _editModel.CoverMediaId = null;
    }

    private async Task LoadLibraryAsync()
    {
        _libraryLoading = true;
        _libraryError = null;

        try
        {
            _media = await MediaLibrary.GetLatestAsync(take: 36);
        }
        catch (Exception ex)
        {
            _libraryError = ex.Message;
            _media = new();
        }
        finally
        {
            _libraryLoading = false;
        }
    }

    private async Task OnUploadAsync(InputFileChangeEventArgs e)
    {
        _uploadError = null;
        _uploadSuccess = null;

        try
        {
            await MediaLibrary.UploadAsync(e.File, maxBytes: 2 * 1024 * 1024);
            _uploadSuccess = "Upload réussi. Vous pouvez maintenant sélectionner l’image depuis la bibliothèque.";

            if (_libraryOpen)
                _media = await MediaLibrary.GetLatestAsync(take: 36);
        }
        catch (Exception ex)
        {
            _uploadError = ex.Message;
        }
    }

    private async Task InsertAsync(string url)
    {
        await JavaScript.InvokeVoidAsync("articleEditor.insertImage", _contentTextArea, url);
        _libraryOpen = false;
    }

    private void OnLabelChanged(int labelId, ChangeEventArgs changeEventArgs)
    {
        if (_editModel is null) return;

        var raw = changeEventArgs.Value;
        var isChecked =
            raw is bool b ? b :
            string.Equals(raw?.ToString(), "true", StringComparison.OrdinalIgnoreCase) ||
            string.Equals(raw?.ToString(), "on", StringComparison.OrdinalIgnoreCase);

        if (isChecked) _editModel.SelectedLabelIds.Add(labelId);
        else _editModel.SelectedLabelIds.Remove(labelId);
    }

    private async Task HandleSubmit(EditContext editContext)
    {
        if (_editModel is null) return;

        _isBusy = true;
        _saveError = null;

        try
        {
            // Sync contenu depuis Summernote (ou fallback textarea)
            _editModel.Contenu = await JavaScript.InvokeAsync<string>("articleEditor.getHtml", _contentTextArea);

            // Valider après synchro
            if (!editContext.Validate())
                return;

            string[]? newLabels = ParseNewLabels(_editModel.NewLabelsCsv);
            int[] selectedLabelIds = _editModel.SelectedLabelIds.ToArray();

            var updatedArticle = new Article
            {
                Id = _editModel.Id,
                Titre = _editModel.Titre,
                Contenu = _editModel.Contenu,
                IsPublic = _editModel.IsPublic,
                CoverMediaId = _editModel.CoverMediaId
            };

            await ArticleService.UpdateArticleAsync(updatedArticle, newLabels, selectedLabelIds);

            Navigation.NavigateTo("/articles");
        }
        catch (Exception exception)
        {
            _saveError = exception.Message;
        }
        finally
        {
            _isBusy = false;
        }
    }

    private void Cancel() => Navigation.NavigateTo("/articles");

    private static string[]? ParseNewLabels(string? csv)
    {
        if (string.IsNullOrWhiteSpace(csv)) return null;

        var items = csv.Split(',', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries);
        return items.Length == 0 ? null : items;
    }

    private sealed class ArticleEditModel
    {
        public int Id { get; set; }

        [Required(ErrorMessage = "Le titre est requis.")]
        public string Titre { get; set; } = string.Empty;

        [Required(ErrorMessage = "Le contenu est requis.")]
        public string Contenu { get; set; } = string.Empty;

        public bool IsPublic { get; set; }

        // Image de couverture (MediaAsset.Id)
        public Guid? CoverMediaId { get; set; }

        public string NewLabelsCsv { get; set; } = string.Empty;

        public HashSet<int> SelectedLabelIds { get; set; } = new();
    }
}
