@page "/articles"

@using Dashboard.Persistance.Entities.Enums
@using Microsoft.AspNetCore.Components.Web
@using System.Text.RegularExpressions
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Authorization
@using global::Dashboard.Persistance.Entities
@using global::Dashboard.Services

@inject IArticleService ArticleService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider

@rendermode RenderMode.InteractiveServer

<PageTitle>Articles</PageTitle>

<div class="mt-5 mb-5 article-page article-list">

    <div class="d-flex flex-column flex-md-row gap-2 mt-2">
        <div class="bb-box-orange-fill flex-grow-1 d-flex align-items-center">
            <h2>Derniers articles</h2>
        </div>

        <div class="bb-box-red flex-grow-1 d-flex align-items-center justify-content-end">
            <div class="d-flex flex-wrap align-items-center gap-2 ms-0">
                <div class="ms-auto d-flex align-items-center gap-2">
                    <input type="text"
                           class="form-control form-control-sm"
                           placeholder="Rechercher..."
                           style="max-width:220px"
                           @bind="_searchText"
                           @bind:event="oninput"
                           @bind:after="OnSearchAfterAsync" />

                    <select class="form-select form-select-sm"
                            style="width:auto"
                            @bind="_selectedSort"
                            @bind:after="OnSortAfter">
                        <option value="@ArticleSort.DateNewest">Plus récent → plus ancien</option>
                        <option value="@ArticleSort.DateOldest">Plus ancien → plus récent</option>
                        <option value="@ArticleSort.TitleAsc">Titre A → Z</option>
                        <option value="@ArticleSort.TitleDesc">Titre Z → A</option>
                    </select>

                    <button class="btn btn-sm" @onclick="ResetFilters" disabled="@_loading">Réinitialiser</button>
                </div>
            </div>
        </div>
    </div>

    <div class="mb-4">
        <div class="bb-text-orange">Labels:</div>

        <div class="d-flex flex-wrap align-items-center gap-2 bb-text-cyan">
            @if (_labels.Count == 0)
            {
                <span class="text-muted">Aucun label</span>
            }
            else
            {
                @foreach (var label in _labels)
                {
                    _labelSelection.TryGetValue(label.Id, out var isChecked);

                    <div class="form-check form-check-inline">
                        <input class="form-check-input"
                               type="checkbox"
                               id="@($"lbl_{label.Id}")"
                               checked="@isChecked"
                               @onchange="(e) => OnLabelChanged(label.Id, e)" />

                        <label class="form-check-label" for="@($"lbl_{label.Id}")">@label.Name</label>
                    </div>
                }
            }
        </div>
    </div>

    <AuthorizeView>
        <Authorized>
            <a class="btn btn-primary mt-3" href="/Articles/Create">Nouvel article</a>
        </Authorized>
    </AuthorizeView>

    @if (_loading)
    {
        <p class="text-muted mt-3">Chargement…</p>
    }
    else if (!string.IsNullOrWhiteSpace(_error))
    {
        <div class="alert alert-danger mt-3">@_error</div>
    }
    else if (_articles.Count == 0)
    {
        <p class="mt-3">Aucun article pour le moment.</p>
    }
    else
    {
        <div class="mt-3 article-list-rows">
            @foreach (var article in _articles)
            {
                var coverUrl = GetCoverUrl(article);
                var href = $"/articles/{article.Slug}";

                <a class="article-row-link"
                   href="@href"
                   aria-label="@($"Lire l'article {article.Titre}")">

                    <div class="article-row-item">
                        <div class="d-flex flex-column flex-md-row gap-3">

                            <div class="article-thumb">
                                @if (!string.IsNullOrWhiteSpace(coverUrl))
                                {
                                    <img src="@coverUrl"
                                         alt=""
                                         loading="lazy"
                                         class="article-thumb-img" />
                                }
                                else
                                {
                                    <div class="article-thumb-placeholder">
                                        <div class="small text-muted">Aucune image</div>
                                    </div>
                                }
                            </div>

                            <div class="flex-grow-1 d-flex flex-column">
                                <h5 class="mb-1 article-title">@article.Titre</h5>

                                <div class="small text-muted mb-2 text-truncate"
                                     title="@string.Join(", ", (article.Labels?.Select(l => l.Name) ?? Enumerable.Empty<string>()))">
                                    @if (article.Labels?.Any() ?? false)
                                    {
                                        @string.Join(", ", article.Labels.Select(l => l.Name))
                                    }
                                </div>

                                <div class="article-excerpt text-muted">
                                    @PlainExcerpt(article.Contenu ?? "", 240)
                                </div>

                                <div class="mt-auto text-muted small">
                                    @article.DateCreation.ToLocalTime().ToString("dd/MM/yyyy")
                                </div>
                            </div>

                        </div>
                    </div>
                </a>

                <hr class="article-sep" />
            }
        </div>
    }
</div>

<style>
    .article-list-rows {
        display: flex;
        flex-direction: column;
    }

    /* Ligne entière cliquable */
    .article-row-link {
        text-decoration: none;
        color: inherit;
        display: block;
        border-radius: 14px; /* hover only */
        padding: 10px 6px;
    }

        /* Hover discret (pas de bordure, pas de card) */
        .article-row-link:hover {
            background: rgba(0,0,0,.03);
        }

    /* Plus de card/bordure ici */
    .article-row-item {
        /* intentionally empty */
    }

    .article-thumb {
        width: 100%;
        max-width: 320px;
        background: rgba(0,0,0,.03);
        border-radius: 12px;
        overflow: hidden;
        flex-shrink: 0;
    }

    .article-thumb-img {
        width: 100%;
        height: 100%;
        min-height: 170px;
        object-fit: cover;
        display: block;
    }

    .article-thumb-placeholder {
        width: 100%;
        min-height: 170px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, rgba(0,0,0,.04), rgba(0,0,0,.02));
    }

    .article-excerpt {
        line-height: 1.35rem;
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
    }

    /* Séparateur horizontal entre articles */
    .article-sep {
        margin: 10px 0;
        border: 0;
        border-top: 1px solid rgba(0,0,0,.10);
    }

    @@media (max-width: 767.98px) {
        .article-thumb {
            max-width: none;
        }

        .article-thumb-img,
        .article-thumb-placeholder {
            min-height: 200px;
        }
    }
</style>

@code {
    // Query-string
    [SupplyParameterFromQuery(Name = "labels")]
    public int[] Labels { get; set; } = Array.Empty<int>();

    [SupplyParameterFromQuery(Name = "sort")]
    public string? Sort { get; set; }

    [SupplyParameterFromQuery(Name = "search")]
    public string? Search { get; set; }

    private ArticleSort _sort = ArticleSort.DateNewest;

    private readonly List<Article> _articles = new();
    private readonly List<Label> _labels = new();
    private Dictionary<int, bool> _labelSelection = new();

    private ArticleSort _selectedSort = ArticleSort.DateNewest;
    private string _searchText = "";

    private bool _loading;
    private string? _error;

    private CancellationTokenSource? _searchDebounceCts;

    protected override async Task OnParametersSetAsync()
    {
        _sort = ArticleSort.DateNewest;

        if (!string.IsNullOrWhiteSpace(Sort) &&
            Enum.TryParse<ArticleSort>(Sort, ignoreCase: true, out var parsedSort))
        {
            _sort = parsedSort;
        }

        _selectedSort = _sort;
        _searchText = Search ?? string.Empty;

        await LoadAsync();
    }

    private async Task LoadAsync()
    {
        _loading = true;
        _error = null;

        try
        {
            _labels.Clear();
            _labels.AddRange(await ArticleService.GetLabelsAsync());

            _labelSelection = _labels.ToDictionary(
                label => label.Id,
                label => Labels.Contains(label.Id)
            );

            var articles = await ArticleService.GetArticlesAsync(Labels, _sort, Search);

            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            var isAdmin = user.IsInRole("Admin");

            if (!isAdmin)
            {
                articles = articles.Where(a => a.IsPublic);
            }

            _articles.Clear();
            _articles.AddRange(articles);
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _loading = false;
        }
    }

    private void OnLabelChanged(int labelId, ChangeEventArgs e)
    {
        var isChecked = ParseCheckboxValue(e.Value);
        _labelSelection[labelId] = isChecked;

        ApplyFilters(replace: true);
    }

    private void OnSortAfter()
    {
        ApplyFilters(replace: true);
    }

    private async Task OnSearchAfterAsync()
    {
        _searchDebounceCts?.Cancel();
        _searchDebounceCts = new CancellationTokenSource();
        var token = _searchDebounceCts.Token;

        try
        {
            await Task.Delay(250, token);
        }
        catch (TaskCanceledException)
        {
            return;
        }

        ApplyFilters(replace: true);
    }

    private void ApplyFilters(bool replace)
    {
        if (_loading)
        {
            return;
        }

        var selectedLabelIds = _labelSelection
            .Where(kvp => kvp.Value)
            .Select(kvp => kvp.Key)
            .ToList();

        var queryParts = new List<string>();

        foreach (var id in selectedLabelIds)
        {
            queryParts.Add($"labels={id}");
        }

        queryParts.Add($"sort={_selectedSort}");

        if (!string.IsNullOrWhiteSpace(_searchText))
        {
            queryParts.Add($"search={Uri.EscapeDataString(_searchText)}");
        }

        var url = "/articles";
        if (queryParts.Count > 0)
        {
            url += "?" + string.Join("&", queryParts);
        }

        Navigation.NavigateTo(url, replace: replace);
    }

    private void ResetFilters()
    {
        _searchDebounceCts?.Cancel();
        Navigation.NavigateTo("/articles", replace: true);
    }

    private static bool ParseCheckboxValue(object? raw)
    {
        if (raw is bool b)
        {
            return b;
        }

        if (raw is string s)
        {
            if (bool.TryParse(s, out var parsed))
            {
                return parsed;
            }

            if (string.Equals(s, "on", StringComparison.OrdinalIgnoreCase))
            {
                return true;
            }
        }

        return false;
    }

    private static string PlainExcerpt(string html, int maxChars)
    {
        if (string.IsNullOrEmpty(html))
        {
            return string.Empty;
        }

        var text = Regex.Replace(html, "<.*?>", " ");
        text = Regex.Replace(text, @"\s+", " ").Trim();

        if (text.Length <= maxChars)
        {
            return text;
        }

        return text.Substring(0, maxChars).Trim() + "…";
    }

    private static string? GetCoverUrl(Article article)
    {
        // 1) Couverture explicite si tu ajoutes CoverMediaId
        // (si ta propriété n’existe pas encore, commente cette partie le temps de migrer)
        if (article.CoverMediaId.HasValue)
        {
            return "/media/" + article.CoverMediaId.Value;
        }

        // 2) Fallback: 1ère image trouvée dans le HTML (permet de garder un rendu même avant migration)
        var first = ExtractFirstImageSrc(article.Contenu);
        if (string.IsNullOrWhiteSpace(first))
            return null;

        // petite barrière : autoriser uniquement URLs relatives /media ou http(s)
        if (first.StartsWith("/media/", StringComparison.OrdinalIgnoreCase) ||
            first.StartsWith("http://", StringComparison.OrdinalIgnoreCase) ||
            first.StartsWith("https://", StringComparison.OrdinalIgnoreCase))
        {
            return first;
        }

        return null;
    }

    private static string? ExtractFirstImageSrc(string? html)
    {
        if (string.IsNullOrWhiteSpace(html))
            return null;

        var m = Regex.Match(
            html,
            @"<img[^>]*\ssrc\s*=\s*[""'](?<src>[^""']+)[""']",
            RegexOptions.IgnoreCase | RegexOptions.CultureInvariant);

        return m.Success ? m.Groups["src"].Value : null;
    }
}
