@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Web
@using global::Dashboard.Entities
@using global::Dashboard.Models

@namespace Dashboard.Components.Dashboard

@rendermode RenderMode.InteractiveServer

@if (IsOpen)
{
    <div class="modal fade show"
         style="display:block;"
         tabindex="-1"
         role="dialog"
         aria-modal="true"
         @onclick="CloseAsync">

        <div class="modal-dialog modal-lg modal-dialog-centered"
             role="document"
             @onclick:stopPropagation="true">

            <div class="modal-content goal-modal-content text-white">
                <div class="modal-header border-0">
                    <h5 class="modal-title">@Title</h5>

                    <button type="button"
                            class="btn-close btn-close-white"
                            aria-label="Close"
                            @onclick="CloseAsync"
                            disabled="@Busy">
                    </button>
                </div>

                <div class="modal-body">
                    <EditForm Model="@Model"
                              OnValidSubmit="SubmitAsync"
                              FormName="goal-form-modal">

                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="mb-2">
                            <label class="form-label">Titre</label>
                            <InputText class="form-control" @bind-Value="Model.Titre" />
                            <ValidationMessage For="() => Model.Titre" />
                        </div>

                        <div class="mb-2">
                            <label class="form-label">Description</label>
                            <InputTextArea class="form-control" @bind-Value="Model.Description" />
                        </div>

                        <div class="row mb-2">
                            <div class="col">
                                <label class="form-label">Début</label>
                                <InputDate TValue="DateOnly" class="form-control" @bind-Value="Model.Debut" />
                                <ValidationMessage For="() => Model.Debut" />
                            </div>
                            <div class="col">
                                <label class="form-label">Fin</label>
                                <InputDate TValue="DateOnly" class="form-control" @bind-Value="Model.Fin" />
                                <ValidationMessage For="() => Model.Fin" />
                            </div>
                        </div>

                        <div class="mb-2">
                            <label class="form-label">Article (optionnel)</label>
                            <InputSelect TValue="int?" class="form-select" @bind-Value="Model.ArticleId">
                                <option value="">-- Aucun --</option>
                                @foreach (var article in Articles)
                                {
                                    <option value="@article.Id">@article.Titre</option>
                                }
                            </InputSelect>
                        </div>

                        @if (ShowIsDone)
                        {
                            <div class="form-check mb-2">
                                <InputCheckbox class="form-check-input" @bind-Value="Model.IsDone" />
                                <label class="form-check-label">Fait</label>
                            </div>
                        }

                        @if (!string.IsNullOrWhiteSpace(Error))
                        {
                            <div class="alert alert-danger mt-3 mb-0">
                                @Error
                            </div>
                        }

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit"
                                    class="btn btn-primary flex-grow-1"
                                    disabled="@Busy">
                                @SubmitLabel
                            </button>

                            <button type="button"
                                    class="btn btn-secondary"
                                    @onclick="CloseAsync"
                                    disabled="@Busy">
                                Annuler
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>

        </div>
    </div>

    <div class="modal-backdrop fade show"></div>

    <style>
        .goal-modal-content {
            border-radius: 18px;
            border: 1px solid rgba(255,255,255,.12);
            background: rgba(20, 20, 22, .88);
            backdrop-filter: blur(10px);
            box-shadow: 0 20px 60px rgba(0,0,0,.55);
        }

            .goal-modal-content .form-control,
            .goal-modal-content .form-select {
                background: rgba(255,255,255,.08);
                color: #fff;
                border: 1px solid rgba(255,255,255,.12);
            }

                .goal-modal-content .form-control::placeholder {
                    color: rgba(255,255,255,.55);
                }

                .goal-modal-content .form-control:focus,
                .goal-modal-content .form-select:focus {
                    border-color: rgba(255,255,255,.25);
                    box-shadow: none;
                }
    </style>
}

@code {
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public EventCallback<bool> IsOpenChanged { get; set; }

    [Parameter, EditorRequired] public GoalFormModel Model { get; set; } = default!;
    [Parameter] public IEnumerable<Article> Articles { get; set; } = Array.Empty<Article>();

    [Parameter] public string Title { get; set; } = "Nouvel objectif";
    [Parameter] public string SubmitLabel { get; set; } = "Créer";
    [Parameter] public bool ShowIsDone { get; set; }

    [Parameter] public bool Busy { get; set; }
    [Parameter] public string? Error { get; set; }

    [Parameter] public EventCallback OnSubmit { get; set; }

    private async Task SubmitAsync()
    {
        await OnSubmit.InvokeAsync();
    }

    private async Task CloseAsync()
    {
        if (Busy) return;
        await IsOpenChanged.InvokeAsync(false);
    }
}
