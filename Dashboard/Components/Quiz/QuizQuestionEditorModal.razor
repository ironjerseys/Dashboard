@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.JSInterop
@using global::Dashboard.Entities

@rendermode RenderMode.InteractiveServer
@namespace Dashboard.Components.Quiz

@inject IJSRuntime JS

@if (IsOpen)
{
    <div class="modal fade show" style="display:block;" tabindex="-1" aria-modal="true" role="dialog">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document" @onclick:stopPropagation="true">
            <div class="modal-content glass-modal text-white">

                <div class="modal-header border-0">
                    <h5 class="modal-title">@Title</h5>
                    <button type="button"
                            class="btn-close btn-close-white"
                            aria-label="Close"
                            @onclick="CloseAsync"
                            disabled="@Busy">
                    </button>
                </div>

                <div class="modal-body">
                    <EditForm EditContext="_editContext" OnSubmit="SubmitAsync" FormName="quiz-question-editor">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="mb-3">
                            <label class="form-label">Question</label>

                            @* Summernote s’attache à ce textarea *@
                            <textarea class="form-control" rows="4" @ref="_questionTextArea"></textarea>

                            <ValidationMessage For="() => _editModel.QuestionText" />
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Proposition 1</label>
                                <InputText class="form-control" @bind-Value="_editModel.Choice0" />
                                <ValidationMessage For="() => _editModel.Choice0" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Proposition 2</label>
                                <InputText class="form-control" @bind-Value="_editModel.Choice1" />
                                <ValidationMessage For="() => _editModel.Choice1" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Proposition 3</label>
                                <InputText class="form-control" @bind-Value="_editModel.Choice2" />
                                <ValidationMessage For="() => _editModel.Choice2" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Proposition 4</label>
                                <InputText class="form-control" @bind-Value="_editModel.Choice3" />
                                <ValidationMessage For="() => _editModel.Choice3" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Bonne réponse (index 0-3)</label>
                            <InputNumber class="form-control" @bind-Value="_editModel.CorrectAnswer" min="0" max="3" />
                            <ValidationMessage For="() => _editModel.CorrectAnswer" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Explication</label>

                            @* Summernote s’attache à ce textarea *@
                            <textarea class="form-control" rows="3" @ref="_explanationTextArea"></textarea>

                            <ValidationMessage For="() => _editModel.Explanation" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Article lié (optionnel)</label>
                            <InputSelect TValue="int?" class="form-select" @bind-Value="_editModel.ArticleId">
                                <option value="">-- Aucun --</option>
                                @foreach (Article article in Articles)
                                {
                                    <option value="@article.Id">@article.Titre</option>
                                }
                            </InputSelect>
                        </div>

                        @if (!string.IsNullOrWhiteSpace(Error))
                        {
                            <div class="alert alert-danger">@Error</div>
                        }

                        <div class="d-flex gap-2 mt-3">
                            <button type="submit" class="btn btn-primary flex-grow-1" disabled="@Busy">
                                @SubmitLabel
                            </button>
                            <button type="button" class="btn btn-secondary" @onclick="CloseAsync" disabled="@Busy">
                                Annuler
                            </button>
                        </div>
                    </EditForm>
                </div>

            </div>
        </div>
    </div>

    <div class="modal-backdrop fade show" @onclick="CloseAsync"></div>

    <style>
        .glass-modal {
            border-radius: 18px;
            border: 1px solid rgba(255,255,255,.12);
            background: rgba(20, 20, 22, .88);
            backdrop-filter: blur(10px);
            box-shadow: 0 20px 60px rgba(0,0,0,.55);
        }

            /* Optionnel : rendre l’éditeur lisible dans un modal sombre */
            .glass-modal .note-editor.note-frame {
                background: #fff;
                color: #000;
                border-radius: .5rem;
                border: 1px solid rgba(0,0,0,.15);
            }

            .glass-modal .note-toolbar {
                background: #fff;
            }

            .glass-modal .note-editable {
                background: #fff;
                color: #000;
            }
    </style>
}

@code {
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public EventCallback<bool> IsOpenChanged { get; set; }

    [Parameter] public string Title { get; set; } = "Nouvelle question";
    [Parameter] public string SubmitLabel { get; set; } = "Créer";
    [Parameter] public bool Busy { get; set; }
    [Parameter] public string? Error { get; set; }

    [Parameter] public QuestionTechnique Model { get; set; } = new();
    [Parameter] public IEnumerable<Article> Articles { get; set; } = Array.Empty<Article>();

    [Parameter] public EventCallback<QuestionTechnique> OnSubmit { get; set; }

    private QuestionTechnique _editModel = new();
    private EditContext _editContext = default!;

    private ElementReference _questionTextArea;
    private ElementReference _explanationTextArea;

    private bool _shouldInitEditors;
    private bool _wasOpen;
    private int _lastModelId;

    protected override void OnParametersSet()
    {
        // Réinitialiser le modèle uniquement à l’ouverture (ou si on change de question)
        if (IsOpen && (!_wasOpen || Model.Id != _lastModelId))
        {
            _editModel = new QuestionTechnique
            {
                Id = Model.Id,
                QuestionText = Model.QuestionText,
                Choice0 = Model.Choice0,
                Choice1 = Model.Choice1,
                Choice2 = Model.Choice2,
                Choice3 = Model.Choice3,
                CorrectAnswer = Model.CorrectAnswer,
                Explanation = Model.Explanation,
                ArticleId = Model.ArticleId
            };

            _editContext = new EditContext(_editModel);
            _shouldInitEditors = true;

            _lastModelId = Model.Id;
        }

        _wasOpen = IsOpen;

        // Au cas où le composant est instancié fermé au départ
        if (_editContext is null)
            _editContext = new EditContext(_editModel);
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!IsOpen || !_shouldInitEditors)
            return;

        _shouldInitEditors = false;

        // Initialise Summernote (fallback textarea si Summernote non chargé)
        await JS.InvokeVoidAsync("articleEditor.init", _questionTextArea, _editModel.QuestionText);
        await JS.InvokeVoidAsync("articleEditor.init", _explanationTextArea, _editModel.Explanation);
    }

    private async Task SubmitAsync(EditContext editContext)
    {
        if (Busy)
            return;

        // Sync HTML depuis Summernote avant validation
        _editModel.QuestionText = await JS.InvokeAsync<string>("articleEditor.getHtml", _questionTextArea);
        _editModel.Explanation = await JS.InvokeAsync<string>("articleEditor.getHtml", _explanationTextArea);

        if (!editContext.Validate())
            return;

        await OnSubmit.InvokeAsync(_editModel);
    }

    private Task CloseAsync()
    {
        return IsOpenChanged.InvokeAsync(false);
    }
}
